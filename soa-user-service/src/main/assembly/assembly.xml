<assembly>
	<id>${env_main}-${env_sub}-bin-${build.timestamp}</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>soa-dubbo-user-bin-${build.timestamp}</baseDirectory>
	<fileSets>
		<fileSet>
			<directory>bin</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0755</fileMode>
			<lineEnding>unix</lineEnding>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>resources</outputDirectory>
			<fileMode>0644</fileMode>
			<includes>
				<include>*.properties</include>
			</includes>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>resources</outputDirectory>
			<fileMode>0644</fileMode>
			<includes>
				<include>log4j2.xml</include>
				<include>applicationContext.xml</include>
				<include>spring-dubbo.xml</include>
				<include>spring-quartz-*.xml</include>
			</includes>
			<filtered>true</filtered>
		</fileSet>
		
		<fileSet>
			<directory>src/main/conf</directory>
			<outputDirectory>conf</outputDirectory>
			<fileMode>0644</fileMode>
			<includes>
				<include>log4j2.xml</include>
				<include>applicationContext.xml</include>
				<include>spring-dubbo.xml</include>
				<include>spring-quartz-*.xml</include>
			</includes>
			<filtered>false</filtered>
		</fileSet>
		
		
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>resources</outputDirectory>
			<fileMode>0644</fileMode>
			<includes>
				<include>mapper/*.xml</include>
				<include>mapper/*.mmdb</include>
				<include>mapper/**/*.vm</include>
				<include>mapper/**/*.sql</include>
				<include>templates/**/*.vm</include>
			</includes>
			<excludes>
				<exclude>log4j2.xml</exclude>
				<exclude>applicationContext.xml</exclude>
				<exclude>spring-dubbo.xml</exclude>
				<exclude>spring-quartz-*.xml</exclude>
			</excludes>
			<filtered>false</filtered>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>com.lcb.services:*</exclude>
			</excludes>
			<fileMode>0644</fileMode>
		</dependencySet>
		<dependencySet>
			<outputDirectory>deploy</outputDirectory>
			<includes>
				<include>com.lcb.services:*</include>
			</includes>
			<fileMode>0644</fileMode>
		</dependencySet>
	</dependencySets>
</assembly>